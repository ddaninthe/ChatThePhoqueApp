<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversationFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/conversationList"
        android:name="com.example.chatthephoqueapp.ConversationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:listitem="@layout/fragment_conversation" />

    <ProgressBar
        android:id="@+id/progressConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/textNoConversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:text="@string/no_conversation"
        android:textStyle="italic"
        android:visibility="gone"
        android:textColorLink="@android:color/darker_gray"
        android:layout_centerInParent="true"/>


</RelativeLayout>
